{
  "packageManager": "bun",
  "checks": {
    "lint": "cd packages/mcp-server && bun run lint",
    "unit": "cd packages/mcp-server && bun run test",
    "e2e": null
  },
  "precheck": ["lint", "unit"],
  "postcheck": ["lint", "unit"],
  "devServer": {
